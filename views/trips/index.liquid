<!-- we're serving block content in layout.liquid -->
<!-- so we need to inform all our blocks(files) -->
{% layout 'layout.liquid'%}
<!-- here we start our block content -->
{% block content %}
    <div >
        <h2 class="display-6">What location are you traveling to?</h2>
        <div class="row">
            {% for trip in trips %}
                <div class="card" style="width: 18rem;">
                    <!-- card header -> name of fruit -->
                    <!-- card body -> ready to eat as title, color as text-->
                    <h5 class="card-header">{{trip.name}}</h5>
                    <div class="card-body">
                        <h5 class="card-title">
                            {% if trip.recommend %}
                                Recommend
                            {% else %}
                                Don't Recommend
                            {% endif %}
                        </h5>
                        <p class="card-text"> 
                            Loaction is {{ trip.city }}
                        </p>
                        <a href="/trips/{{ trip.id }}" class="btn btn-info">
                            View this Trip
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}